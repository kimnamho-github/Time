<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Time.Record_Activity">

    <EditText
        android:id="@+id/et_wakeup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="100dp"
        android:hint="일어난 시간을 입력해주세요. ex) 0~23"
        android:textSize="14.8sp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/et_slp"
        app:layout_constraintEnd_toStartOf="@+id/btn_wakeup"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_wakeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/homebutton_background"
        android:text="등록"
        app:layout_constraintBottom_toTopOf="@+id/btn_slp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_wakeup"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_slp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="100dp"
        android:hint="수면시간을 입력해주세요. ex) 0~24"
        android:textSize="15sp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/et_eat"
        app:layout_constraintEnd_toStartOf="@+id/btn_slp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_slp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/homebutton_background"
        android:text="등록"
        app:layout_constraintBottom_toTopOf="@+id/btn_eat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_slp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_eat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="267dp"
        android:hint="식사 한 횟수를 입력해주세요. ex) 1~3"
        android:textSize="15sp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_eat"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="267dp"
        android:orientation="vertical"
        android:background="@drawable/homebutton_background"
        android:text="등록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_eat"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>