<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.Time.ForthActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="CES-D"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:text="19. 사람들이 나를 싫어하는 것 같았다."
        android:textSize="15dp"
        android:background="@color/text"
        android:padding="2dp"
        android:gravity="center"
        android:singleLine="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/rg19">
        <RadioButton
            android:id="@+id/radio_19_1"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="전혀\n없었다" />
        <RadioButton
            android:id="@+id/radio_19_2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="한두번\n있었다" />
        <RadioButton
            android:id="@+id/radio_19_3"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="많이\n있었다" />
        <RadioButton
            android:id="@+id/radio_19_4"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매일\n있었다" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:text="20. 도무지 뭘 해나갈 엄두가 나지 않았다."
        android:textSize="15dp"
        android:background="@color/text"
        android:padding="2dp"
        android:gravity="center"
        android:singleLine="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/rg20">
        <RadioButton
            android:id="@+id/radio_20_1"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="전혀\n없었다" />
        <RadioButton
            android:id="@+id/radio_20_2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="한두번\n있었다" />
        <RadioButton
            android:id="@+id/radio_20_3"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="많이\n있었다" />
        <RadioButton
            android:id="@+id/radio_20_4"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매일\n있었다" />
    </RadioGroup>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="제출"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="점수 : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_text"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/homebutton_background"
        android:text="다음화면"
        android:textSize="17dp"
        android:textStyle="bold" />

</LinearLayout>